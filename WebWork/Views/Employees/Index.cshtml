@model IEnumerable<WebWork.Models.Employee>;

<div class="container">
    <h3>Employees</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>
                        <a asp-controller="Employees" asp-action="Details" asp-route-Id="@employee.Id">
                            @employee.LastName
                        </a>
                    </td>
                    <td>@employee.FirstName</td>
                    <td>@employee.Patronymic</td>
                    <td>@employee.Age</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Home" asp-action="Index">"On Main Sheet"</a>
</div>
