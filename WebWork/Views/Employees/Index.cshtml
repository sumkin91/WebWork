@model IEnumerable<EmployeeViewModel>;

    @{
        var page_count = (int?)ViewBag.PagesCount;
    }
<div class="container">
    <h3>Сотрудники</h3>
    <p>
        <a asp-action="Create" class="btn btn-default">Создать</a>
        <a asp-action="Edit" class="btn btn-default">Создать вторым способом</a>
    </p>
    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Удаление сразу</th>
                    <th>Id</th>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Возраст</th>
                    <th>Редактирование</th>
                    <th>Удаление через просомтр деталей</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>
                            <form asp-action="DeleteConfirmed" asp-route-Id="@employee.Id">
                                <input type="submit" value="x" class="btn btn-danger">
                            </form>
                        </td>
                        <td>@employee.Id</td>
                        <td>
                            <a asp-controller="Employees" asp-action="Details" asp-route-Id="@employee.Id">
                                @employee.LastName
                            </a>
                        </td>
                        <td>@employee.FirstName</td>
                        <td>@employee.Patronymic</td>
                        <td>@employee.Age</td>
                        <!--добавление кнопки редактирования-->
                        <td>
                            <a asp-action="Edit" asp-route-Id="@employee.Id"
                            class="btn btn-sm btn-default">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                        <!--добавление кнопки удаления-->
                        <td>
                            <a asp-action="Delete" asp-route-Id="@employee.Id"
                            class="btn btn-sm btn-danger">
                                <i class="fa fa-times"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Сотрудники отсутствуют!!! или гуляют!!!</p>
    }
    @if(page_count != null)
    {
        <p>Число страниц  - @page_count</p>
    }
    <a asp-controller="Home" asp-action="Index">На главную</a>
</div>
