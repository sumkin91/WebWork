@using WebWork.Domain.Entities.Identity
@model IEnumerable<EmployeeViewModel>
@{
    var pages_count = (int?)ViewBag.PagesCount;
}

<div class="container">
    <h3>Сотрудники</h3>

    @if (User.IsInRole(Role.Administrators))
    {
                <p>
                    <a asp-action="Create" class="btn btn-default">Создать</a>
                    <a asp-action="Edit" class="btn btn-default">Создать2</a>
                </p>
    }

    @if (Model.Any())
    {
            <hr/>

            <table class="table">
                    <thead>
                    <tr>
                    @if (User.IsInRole(Role.Administrators))
                    {
                                    <th>Удалить сразу</th>
                    }
                        <th>Id</th>
                        <th>Фамилия</th>
                        <th>Имя</th>
                        <th>Отчество</th>
                        <th>Возраст</th>
                    @if (User.IsInRole(Role.Administrators))
                    {
                        <th>Редактировать</th>
                    }

                    </tr>
                </thead>
                <tbody>
                @foreach (var employee in Model)
                {
                        <tr>
                        @if (User.IsInRole(Role.Administrators))
                        {
                           <td>
                                <form asp-action="DeleteConfirmed" asp-route-Id="@employee.Id">
                                    <input type="submit" value="X" class="btn-sm btn-danger"/>
                                </form>
                            </td>
                        }

                            <td>@employee.Id</td>
                            <td>
                                <a asp-action="Details" asp-route-Id="@employee.Id">
                            @employee.LastName
                                </a>
                            </td>
                            <td>@employee.FirstName</td>
                            <td>@employee.Patronymic</td>
                            <td>@employee.Age</td>
                        
                        @if (User.IsInRole(Role.Administrators))
                        {
                            <td>
                                <a asp-action="Edit" asp-route-Id="@employee.Id"
                                   class="btn-sm btn-default">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-Id="@employee.Id"
                                   class="btn-sm btn-danger">
                                    <i class="fa fa-times"></i>
                                </a>
                            </td>
                        }
                        
                        </tr>
                }
                </tbody>
            </table>
    }
    else
    {
            <p>Сотрудники отсутствуют</p>
    }

    @if (pages_count != null)
    {
            <p>Число страниц - @pages_count</p>
    }

    <a asp-controller="Home" asp-action="Index">На главную</a>
</div>