
@model IEnumerable<WebWork.Models.Employee>;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employees</title>
</head>
<body>
    <h3>Employees</h3>
    <table>
    <thead>
    <tr>
        <th>Id</th>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Возраст</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>
                    <a href="/Home/EmployeDetails/@employee.Id">
                        @employee.LastName
                    </a>
                </td>
                <td>@employee.FirstName</td>
                <td>@employee.Patronymic</td>
                <td>@employee.Age</td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("On Main Sheet", "Index");
</body>
</html>
